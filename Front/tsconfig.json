{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Added this line
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@spartan-ng/ui-command-helm": [
        ".\\src/app/shared/ui/ui-command-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        ".\\src/app/shared/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        ".\\src/app/shared/ui/ui-button-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": [
    "src",
    "typings.d.ts"
  ],
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ]
}
